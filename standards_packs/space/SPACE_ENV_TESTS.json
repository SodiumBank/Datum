        "object_type": "test",
        "selector": {
          "test_type": "VIBRATION"
        }
      },
      "when": {
        "field": "hardware_class",
        "operator": "equals",
        "value": "flight"
      },
      "then": {
        "action": "REQUIRE",
        "enforcement": "BLOCK_RELEASE",
        "payload": {
          "test_type": "VIBRATION",
          "object_id": "VIBRATION"
        }
      },
      "why": {
        "summary": "Vibration test required for flight hardware per NASA GEVS",
        "citations": ["NASA_GEVS"]
      },
      "metadata": {
        "severity": "critical",
        "tags": ["environmental", "test", "flight"],
        "version": "1.0.0"
      }
    },
    {
      "rule_id": "SPACE.TEST.SHOCK.FLIGHT",
      "pack_id": "SPACE_ENV_TESTS",
      "applies": {
        "industry_profiles": ["space"],
