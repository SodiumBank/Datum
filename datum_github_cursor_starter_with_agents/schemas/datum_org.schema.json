{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://datum.example/schemas/datum_org.schema.json",
  "title": "Datum Organization",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "tiers_enabled", "compliance_modes", "created_at"],
  "properties": {
    "id": { "$ref": "./datum_common.schema.json#/$defs/id" },
    "name": { "type": "string", "minLength": 1, "maxLength": 128 },
    "tiers_enabled": {
      "type": "array",
      "items": { "$ref": "./datum_common.schema.json#/$defs/tier" },
      "minItems": 1,
      "uniqueItems": true
    },
    "compliance_modes": {
      "type": "array",
      "items": { "$ref": "./datum_common.schema.json#/$defs/complianceMode" },
      "minItems": 1,
      "uniqueItems": true
    },
    "created_at": { "$ref": "./datum_common.schema.json#/$defs/isoTimestamp" },
    "updated_at": { "$ref": "./datum_common.schema.json#/$defs/isoTimestamp" }
  }
}
