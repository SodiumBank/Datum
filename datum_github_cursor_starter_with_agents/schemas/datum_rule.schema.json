{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://datum.example/schemas/datum_rule.schema.json",
  "title": "DatumRule",
  "type": "object",
  "additionalProperties": false,
  "required": ["rule_id", "category", "tier_required", "severity", "trigger", "actions", "justification"],
  "properties": {
    "rule_id": { "type": "string", "pattern": "^[A-Z0-9-]{6,64}$" },
    "category": { "type": "string", "enum": ["DRC", "DFM", "PROCESS", "TEST", "SUPPLY"] },
    "tier_required": { "$ref": "./datum_common.schema.json#/$defs/tier" },
    "severity": { "$ref": "./datum_common.schema.json#/$defs/severity" },
    "trigger": { "type": "string", "minLength": 1, "maxLength": 2048 },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["ADD_STEP", "ADD_TEST", "ADD_COST", "ADD_RISK", "REQUIRE_TRACE", "LOCK_SEQUENCE"] },
          "payload": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "justification": { "type": "string", "minLength": 1, "maxLength": 2048 }
  }
}
