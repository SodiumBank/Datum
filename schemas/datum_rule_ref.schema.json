{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://datum.example/schemas/datum_rule_ref.schema.json",
  "title": "DatumRuleRef",
  "type": "object",
  "additionalProperties": false,
  "required": ["rule_id", "ruleset_version"],
  "properties": {
    "rule_id": { "type": "string", "minLength": 4, "maxLength": 64 },
    "ruleset_version": { "type": "integer", "minimum": 1, "maximum": 999999 },
    "justification": { "type": "string", "maxLength": 512 }
  }
}
