{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "datum://schemas/standards_pack.schema.json",
  "title": "Datum Standards Pack",
  "type": "object",
  "required": ["pack_id", "name", "industry_profiles", "rules"],
  "properties": {
    "pack_id": { "type": "string" },
    "name": { "type": "string" },
    "industry_profiles": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "description": { "type": "string" },
    "references": { "type": "array", "items": { "type": "string" } },
    "rules": { "type": "array", "items": { "$ref": "./rule.schema.json" }, "minItems": 0 }
  },
  "additionalProperties": false
}
